<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.0.xsd">


	<!-- Importing java-config class for MongoDB -->
	<bean class="com.namoo.social.dao.mongo.config.MongoConfiguration" />
	
	<!-- Component-scan -->
	<context:component-scan base-package="com.namoo.social.dao" />
	<context:component-scan base-package="com.namoo.social.service" />

</beans>
